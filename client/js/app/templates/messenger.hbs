<div id="{{id}}" class="chat">
	<div class="element">
		<div class="head">
			{{#if friends}}
			<select class="receivers" multiple="multiple">
				<optgroup label="Friends">
					{{#each friends}}
					<option value="{{name}}">{{name}}</option>
					{{/each}}
				</optgroup>	
			</select>
			{{/if}}
			{{#if receivers}}
			{{#each receivers}}
			<div class="title">{{this}}</div>
			{{/each}}
			{{/if}}
			<div class="submit fa fa-envelope-o"></div>
			<div class="remove-messenger fa fa-times"></div>
		</div>
		<div class='box'>
			<div class='wrapper'>
				<div class="container"></div>
			</div>
		</div>
		<div class="user-container">
			<textarea type="text" class="cmd" placeholder="Press Enter to send" disabled="true"></textarea>
		</div>
	</div>
	<div class="resize-bar"></div>
</div>